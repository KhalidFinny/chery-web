<!-- Navigation arrows -->
<div class="absolute inset-y-0 left-0 right-0 flex items-center justify-between pointer-events-none px-4 md:px-6 z-10">
  <!-- Previous button -->
  <button 
    @click="prev()" 
    class="pointer-events-auto group bg-white/90 backdrop-blur-sm text-gray-700 w-12 h-12 md:w-16 md:h-16 rounded-full flex items-center justify-center transition-all duration-300 hover:scale-110 border border-gray-200 hover:border-gray-300 hover:bg-white transform hover:-translate-x-1" 
  >
    <i class="fa-solid fa-arrow-left text-lg md:text-xl group-hover:text-red-600 transition-colors duration-300"></i>
  </button>
  
  <!-- Next button -->
  <button 
    @click="next()" 
    class="pointer-events-auto group bg-white/90 backdrop-blur-sm text-gray-700 w-12 h-12 md:w-16 md:h-16 rounded-full flex items-center justify-center transition-all duration-300 hover:scale-110 border border-gray-200 hover:border-gray-300 hover:bg-white transform hover:translate-x-1" 
  >
    <i class="fa-solid fa-arrow-right text-lg md:text-xl group-hover:text-red-600 transition-colors duration-300"></i>
  </button>
</div>